set nocompatible

filetype plugin indent on

" Editing
set ignorecase

" Display
set background=dark
set hlsearch
set incsearch
set laststatus=2
set number
set ruler
set showmatch
set visualbell
syntax enable

" Indentation
set autoindent
set expandtab
set smarttab
set shiftwidth=2
set softtabstop=2
set tabstop=2

" Dependencies
colorscheme molokai
let g:rehash256=1
let g:molokai_original=1
