set nocompatible

filetype plugin indent on

" Editing
set ignorecase

" Display
set background=dark
set cursorline
set hlsearch
set incsearch
set laststatus=2
set noshowmode
set relativenumber
set ruler
set shortmess-=S
set visualbell
syntax enable

" Indentation
set autoindent
set expandtab
set shiftwidth=2
set smarttab
set softtabstop=2
set tabstop=2

" Packages
packadd! onedark.vim
let g:onedark_termcolors=16
colorscheme onedark

packadd! lightline.vim
let g:lightline = { 'colorscheme': 'one' }
